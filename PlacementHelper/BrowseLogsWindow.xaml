<Window x:Class="PlacementHelper.BrowseLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Browse Logs" Height="600" Width="800" 
        Background="{StaticResource PrimaryBackgroundColor}" 
        WindowStyle="None" AllowsTransparency="True">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    <Border CornerRadius="10" Background="{StaticResource PrimaryBackgroundColor}">
        <DockPanel>
            <!-- Title Bar -->
            <DockPanel DockPanel.Dock="Top" Background="{StaticResource SecondaryBackgroundColor}" Height="30" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="Browse Logs" Foreground="{StaticResource PrimaryTextColor}" VerticalAlignment="Center" Margin="10,0,0,0" FontFamily="{StaticResource InterFont}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="&#xE949;" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                    <Button Content="&#xE739;" Click="MaximizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                    <Button Content="&#xE106;" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
                </StackPanel>
            </DockPanel>
            <!-- Menu Bar -->
            <Menu DockPanel.Dock="Top" Background="{StaticResource SecondaryBackgroundColor}" Foreground="{StaticResource PrimaryTextColor}" FontFamily="{StaticResource InterFont}">
                <MenuItem Header="File">
                    <MenuItem Header="Open" Click="Open_Click" InputGestureText="Ctrl+O">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save" Click="Save_Click" InputGestureText="Ctrl+S">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click" InputGestureText="Alt+F4">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="Cut" Click="Cut_Click" InputGestureText="Ctrl+X">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8C6;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Copy" Click="Copy_Click" InputGestureText="Ctrl+C">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Paste" Click="Paste_Click" InputGestureText="Ctrl+V">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE77F;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About" Click="About_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <!-- Log ListBox -->
                <ListBox x:Name="logListBox" Grid.Column="0" Background="{StaticResource SecondaryBackgroundColor}" 
                         Foreground="{StaticResource PrimaryTextColor}" BorderBrush="{StaticResource BorderColor}"
                         SelectionChanged="LogListBox_SelectionChanged" Margin="0,0,5,0"/>
                <!-- Details TextBox -->
                <TextBox x:Name="detailsTextBox" Grid.Column="1" Style="{StaticResource ModernTextBox}"
                         Margin="5,0,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
            </Grid>
        </DockPanel>
    </Border>
</Window>
